 	stm32mp157c-odyssey.dtb
 dtb-$(CONFIG_MACH_SUN4I) += \
 	sun4i-a10-a1000.dtb \
diff --git a/arch/arm/boot/dts/stm32mp157c-radium-radioactive.dtsi b/arch/arm/boot/dts/stm32mp157c-radium-radioactive.dtsi
new file mode 100644
index 000000000..8fbed34db
--- /dev/null
+++ b/arch/arm/boot/dts/stm32mp157c-radium-radioactive.dtsi
@@ -0,0 +1,776 @@
+// SPDX-License-Identifier: (GPL-2.0+ OR BSD-3-Clause)
+/*
